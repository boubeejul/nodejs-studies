<html lang="en">
    <%- include('./partials/head') %>

<body>
    
    <%- include('./partials/nav') %>

    <div class="blogs content">
        <h2>All Blogs</h2>

        <% if (blogs.length > 0) { %>
            <% blogs.map(blog => { %>

                <h3 class="title"><%= blog.title %></h3>
                <p class="snippet"><%= blog.snippet %></p>
            <% }) %>
        <% } else {%>
                <p>No blogs</p>
            <% } %>
    </div>

</body>
</html>